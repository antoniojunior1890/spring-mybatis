<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.antonio.example.mybatis.mapper.ProductMapper">

    <select id="findAll" resultType="com.antonio.example.mybatis.model.Product">
        select * from product
    </select>

    <insert id="save" parameterType="com.antonio.example.mybatis.model.Product"
            useGeneratedKeys="true" keyColumn="id"
            keyProperty="product.id">
        INSERT INTO PRODUCT
            (name, description, price)
        VALUES
        (
            #{product.name},
            #{product.description},
            #{product.price}
        )
    </insert>
</mapper>